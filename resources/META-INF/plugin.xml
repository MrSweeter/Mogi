<idea-plugin>
  <id>be.msdc.mogi</id>
  <name>Mogi</name>
  <version>0.0.5</version>
  <vendor email="dev.msdc@gmail.com">MSDC</vendor>

  <description>Execute git submodule command easily with a toolbar button</description>

  <change-notes>Execute git submodule command easily with a toolbar button</change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.platform</depends>
  <!--<depends>com.intellij.modules.androidstudio</depends>-->


  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <projectConfigurable instance="be.msdc.mogi.settings.MogiConfigurable" />
    <applicationService serviceImplementation="be.msdc.mogi.settings.MogiSettings"/>
  </extensions>

  <actions>
    <action id="MogiSubmoduleUpdateAction"
            class="be.msdc.mogi.actions.MogiGitSubmoduleUpdateAction"
            text="Submodule Update"
            description="Run Mogi [git submodule update] command"
            icon="/icons/mogiSubmoduleUpdate.svg"/>

    <action id="MogiSubmoduleCheckoutAction"
            class="be.msdc.mogi.actions.MogiGitSubmoduleCheckoutAction"
            text="Submodule Checkout"
            description="Run Mogi [git submodule foreach 'git checkout -branch-'] command"
            icon="/icons/mogiSubmoduleCheckout.svg"/>

    <action id="MogiUserCustomCommandAction"
            class="be.msdc.mogi.actions.MogiUserCustomCommandAction"
            text="Custom Command"
            description="Run Mogi [custom] command"
            icon="AllIcons.Actions.GroupByClass"/>

    <action id="MogiLabelAction"
            class="be.msdc.mogi.actions.MogiLabelAction"
            text="Mogi:"/>

    <group id="MogiNavBarActionsGroup">
      <reference ref="MogiSubmoduleUpdateAction"/>
      <reference ref="MogiSubmoduleCheckoutAction"/>
      <reference ref="MogiUserCustomCommandAction"/>
      <add-to-group group-id="VcsNavBarToobarActions" anchor="last"/>
    </group>

    <group id="MogiToolbarActionsGroup">
      <reference ref="MogiSubmoduleUpdateAction"/>
      <reference ref="MogiSubmoduleCheckoutAction"/>
      <reference ref="MogiUserCustomCommandAction"/>
      <separator/>
      <add-to-group group-id="VcsToobarActions" anchor="last"/>
    </group>

    <group id="MogiTouchBarActionsGroup">
      <reference ref="MogiSubmoduleUpdateAction"/>
      <reference ref="MogiSubmoduleCheckoutAction"/>
      <reference ref="MogiUserCustomCommandAction"/>
      <add-to-group group-id="VcsTouchBarGroup" anchor="last"/>
    </group>

    <group id="MogiMenuGroup" text="Mogi">
      <reference ref="MogiSubmoduleUpdateAction"/>
      <reference ref="MogiSubmoduleCheckoutAction"/>
      <reference ref="MogiUserCustomCommandAction"/>
      <add-to-group group-id="MainMenu"/>
    </group>
  </actions>

</idea-plugin>